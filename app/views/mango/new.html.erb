<div class="centered">
New Mango

<%= form_for @mango do |m| %>
  <div class='form-group'>
    <%= m.label :name %>
    <%= m.text_field :name %>
  </div>
  <div class='form-group'>
    <%= m.label :planted %>
    <%= m.text_field :planted %>
  </div>
  <div class='form-group'>
    <%= m.label :comments %>
    <%= m.text_area :comments, rows: 8 %>
  </div>
  <%= m.submit "Save", class: 'btn btn-success' %>

<% end %>

</div>
