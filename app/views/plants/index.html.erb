        <li>Live Oak</li>
        <li>Basil</li>
        <li>Lime Basil</li>
        <li>Cherry Tomato</li>
        <li>Sage</li>
      </ul>
  </div>




  <table class="display-table">
    <tr>
      <th class="th-left">Picture</th>
      <th>Name</th>
      <th>Planted</th>
      <th>Harvested</th>
      <th>Active</th>
      <th>Comments</th>
      <th class="th-right"></th>
    </tr>
  <% @garlic.each do |g| %>
    <tr>
      <td><div class="plant-pic"></div></td>
      <td><%= g.name %></td>
      <td><%= g.planted %></td>
      <td><%= g.harvested %></td>
      <td><%= g.active %></td>
      <td><%= g.comments %></td>
      <td><%= link_to 'Edit',
        edit_garlic_path(g),
        class: 'btn btn-default'
      %>
      <%= link_to 'Delete',
        garlic_path(g),
        method: :delete,
        class: 'btn btn-danger',
        data: { confirm: 'Are you sure?' }
      %></td>
    </tr>
  <% end %>
