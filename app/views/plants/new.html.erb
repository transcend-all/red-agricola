<div class="centered">
New Plant

<%= form_for @plant do |p| %>
  <div class='form-group'>
    <%= p.label :name %>
    <%= p.text_field :name %>
  </div>
  <div class='form-group'>
    <%= p.label :planted %>
    <%= p.text_field :planted %>
  </div>
  <div class='form-group'>
    <%= p.label :comments %>
    <%= p.text_area :comments, rows: 8 %>
  </div>
  <%= p.submit "Save", class: 'btn btn-success' %>

<% end %>


<h2>Import</h2>

<%= form_tag import_plants_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>


</div>
